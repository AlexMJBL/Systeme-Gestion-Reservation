@page
@model Reservations.Web.Pages.ReservationsVoitures.ConsulterModel
@{
    ViewData["Title"] = "Détails Réservation Voiture";
}

<h1 class="text-center mb-5">Détails de la réservation de voiture</h1>

<div class="card mb-4 shadow-sm">
    <div class="card-header bg-primary text-white">
        Informations sur la réservation
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">Identifiant réservation</dt>
            <dd class="col-sm-9">@Model.ReservationVoiture.Id</dd>

            <dt class="col-sm-3 fw-bold">Prénom client</dt>
            <dd class="col-sm-9">@Model.ReservationVoiture.PrenomClient</dd>

            <dt class="col-sm-3 fw-bold">Nom client</dt>
            <dd class="col-sm-9">@Model.ReservationVoiture.NomClient</dd>

            <dt class="col-sm-3 fw-bold">Téléphone client</dt>
            <dd class="col-sm-9">@Model.ReservationVoiture.TelephoneClient</dd>

            <dt class="col-sm-3 fw-bold">Date de début</dt>
            <dd class="col-sm-9">@Model.ReservationVoiture.DateDebut.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3 fw-bold">Date de fin</dt>
            <dd class="col-sm-9">@Model.ReservationVoiture.DateFin.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3 fw-bold">Prix total</dt>
            <dd class="col-sm-9">@Model.ReservationVoiture.Prix.ToString("C")</dd>
        </dl>
    </div>
</div>

<div class="card mb-4 shadow-sm">
    <div class="card-header bg-secondary text-white">
        Informations sur la voiture réservée
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">Identifiant</dt>
            <dd class="col-sm-9">@Model.ReservationVoiture.Voiture.Id</dd>

            <dt class="col-sm-3 fw-bold">Description</dt>
            <dd class="col-sm-9">@Model.ReservationVoiture.Voiture.Description</dd>

            <dt class="col-sm-3 fw-bold">Prix Journalier</dt>
            <dd class="col-sm-9">@Model.ReservationVoiture.Voiture.PrixJournalier.ToString("C")</dd>

            <dt class="col-sm-3 fw-bold">Marque</dt>
            <dd class="col-sm-9">@Model.ReservationVoiture.Voiture.Marque</dd>

            <dt class="col-sm-3 fw-bold">Modèle</dt>
            <dd class="col-sm-9">@Model.ReservationVoiture.Voiture.Modele</dd>

            <dt class="col-sm-3 fw-bold">Année de fabrication</dt>
            <dd class="col-sm-9">@Model.ReservationVoiture.Voiture.AnneeDeFabrication</dd>

            <dt class="col-sm-3 fw-bold">Nombre de portes</dt>
            <dd class="col-sm-9">@Model.ReservationVoiture.Voiture.NombreDePortes</dd>

            <dt class="col-sm-3 fw-bold">Nombre de places</dt>
            <dd class="col-sm-9">@Model.ReservationVoiture.Voiture.NombreDePlaces</dd>
        </dl>
    </div>
</div>

<div class="d-flex justify-content-between">
    <a class="btn btn-secondary" asp-page="./Index">Retour à la liste</a>
    <a class="btn btn-primary" asp-page="../Voitures/Consulter"
       asp-route-Id="@Model.ReservationVoiture.Voiture.Id"
       asp-route-ReservationId="@Model.ReservationVoiture.Id">
        Consulter la fiche du véhicule
    </a>
</div>
