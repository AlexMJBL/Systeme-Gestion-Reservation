@page
@model Reservations.Web.Pages.ReservationsVoitures.IndexModel
@using Reservations.Web.Models
@{
}

<h1 class="text-center my-4">Liste des réservations de voitures</h1>
<div class="d-flex justify-content-between align-items-center mb-4">
    <form method="post" class="d-flex align-items-center">
        <label for="OptionChoisi" class="form-label mb-0 me-2">Critère de tri : </label>
        <select asp-for="OptionChoisi" class="form-select w-auto me-2">
            <option value="Prix">Montant total</option>
            <option value="DateDebut">Date de début</option>
            <option value="DateFin">Date de fin</option>
        </select>
        <button type="submit" class="btn btn-primary">
            Trier
        </button>
    </form>

    <a class="btn btn-primary ms-auto" asp-page="Create">Nouvelle réservation</a>
</div>


<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Prénom Client</th>
            <th>Nom Client</th>
            <th>Montant Total</th>
            <th>Date Début</th>
            <th>Date Fin</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reservation in Model.ReservationsVoitures)
        {
            <tr>
                <td>@reservation.PrenomClient</td>
                <td>@reservation.NomClient</td>
                <td>@reservation.Prix</td>
                <td>@reservation.DateDebut.ToString("yyyy-MM-dd")</td>
                <td>@reservation.DateFin.ToString("yyyy-MM-dd")</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-page="./Edit" asp-route-id="@reservation.Id">Modifier</a> |
                    <a class="btn btn-primary btn-sm" asp-page="./Consulter" asp-route-id="@reservation.Id">Consulter</a> |
                    <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-id="@reservation.Id">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
