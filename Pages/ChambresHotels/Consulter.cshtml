@page
@model ProjetReservation.Pages.ChambresHotels.ConsulterModel
@{
    ViewData["Title"] = "Consulter Chambre hôtel";
}

<h1 class="text-center my-4">Détails de la chambre d'hôtel</h1>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">Identifiant</dt>
            <dd class="col-sm-9">@Model.ChambreHotel.Id</dd>

            <dt class="col-sm-3 fw-bold">Description</dt>
            <dd class="col-sm-9">@Model.ChambreHotel.Description</dd>

            <dt class="col-sm-3 fw-bold">Prix Journalier</dt>
            <dd class="col-sm-9">@Model.ChambreHotel.PrixJournalier.ToString("C")</dd>

            <dt class="col-sm-3 fw-bold">Type de Chambre</dt>
            <dd class="col-sm-9">@Model.ChambreHotel.TypeChambre</dd>

            <dt class="col-sm-3 fw-bold">Nombre de Lits</dt>
            <dd class="col-sm-9">@Model.ChambreHotel.NombreLits</dd>

            <dt class="col-sm-3 fw-bold">Climatisation</dt>
            <dd class="col-sm-9">@(@Model.ChambreHotel.Climatisation ? "Oui" : "Non")</dd>

            <dt class="col-sm-3 fw-bold">Grandeur (m²)</dt>
            <dd class="col-sm-9">@Model.ChambreHotel.GrandeurM2</dd>

            <dt class="col-sm-3 fw-bold">Balcon</dt>
            <dd class="col-sm-9">@(@Model.ChambreHotel.Balcon ? "Oui" : "Non")</dd>
        </dl>
    </div>
</div>

<div class="d-flex justify-content-between">
    <a class="btn btn-secondary" asp-page="./Index">Retour à la liste</a>
    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.ChambreHotel.Id">Modifier la chambre</a>
</div>
