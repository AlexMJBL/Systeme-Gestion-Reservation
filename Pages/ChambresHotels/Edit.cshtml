@page
@using Gestion_Reservation.Models
@model ProjetReservation.Pages.ChambresHotels.EditModel
@{
    ViewData["Title"] = "Modifier Chambre d'hôtel";
}

<h1 class="mb-4 text-center">Modifier une chambre d'hôtel</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post" class="card shadow-sm p-4 bg-light">
            <div class="form-group">
                <label asp-for="ChambreHotel.Id" class="control-label"></label>
                <input asp-for="ChambreHotel.Id" class="form-control" readonly />
                <span asp-validation-for="ChambreHotel.Id" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="ChambreHotel.Description" class="control-label"></label>
                <input asp-for="ChambreHotel.Description" class="form-control" />
                <span asp-validation-for="ChambreHotel.Description" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="ChambreHotel.PrixJournalier" class="control-label"></label>
                <input asp-for="ChambreHotel.PrixJournalier" class="form-control" />
                <span asp-validation-for="ChambreHotel.PrixJournalier" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="ChambreHotel.TypeChambre" class="control-label"></label>
                <select asp-for="ChambreHotel.TypeChambre" class="form-control">
                    @foreach (var type in Enum.GetValues(typeof(TypeChambre)))
                    {
                        <option value="@type">@type</option>
                    }
                </select>
                <span asp-validation-for="ChambreHotel.TypeChambre" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="ChambreHotel.NombreLits" class="control-label"></label>
                <input asp-for="ChambreHotel.NombreLits" class="form-control" />
                <span asp-validation-for="ChambreHotel.NombreLits" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="ChambreHotel.Climatisation" class="control-label"></label>
                <select asp-for="ChambreHotel.Climatisation" class="form-control">
                    <option value="true">Oui</option>
                    <option value="false">Non</option>
                </select>
                <span asp-validation-for="ChambreHotel.Climatisation" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="ChambreHotel.GrandeurM2" class="control-label"></label>
                <input asp-for="ChambreHotel.GrandeurM2" class="form-control" />
                <span asp-validation-for="ChambreHotel.GrandeurM2" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="ChambreHotel.Balcon" class="control-label"></label>
                <select asp-for="ChambreHotel.Balcon" class="form-control">
                    <option value="true">Oui</option>
                    <option value="false">Non</option>
                </select>
                <span asp-validation-for="ChambreHotel.Balcon" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Enregistrer" class="btn btn-success w-100" />
            </div>
        </form>

        <div class="mt-3 text-center">
            <a asp-page="Index" class="btn btn-outline-secondary">Retourner à la liste des chambres</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
