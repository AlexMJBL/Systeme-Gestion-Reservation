@page
@model Gestion_Reservation.Pages.ReservationsChambresHotels.EditModel
@{
    ViewData["Title"] = "Modifier une réservation";
}


<h1 class="text-center mb-4">Modifier une réservation de chambre</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post" class="card shadow-sm p-4 bg-light">


        <div class="form-group mb-3">
            <label asp-for="ReservationChambreHotel.Id" class="control-label"></label>
            <input asp-for="ReservationChambreHotel.Id" class="form-control" readonly />
            <span asp-validation-for="ReservationChambreHotel.Id" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ReservationChambreHotel.PrenomClient" class="control-label"></label>
            <input asp-for="ReservationChambreHotel.PrenomClient" class="form-control" />
            <span asp-validation-for="ReservationChambreHotel.PrenomClient" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ReservationChambreHotel.NomClient" class="control-label"></label>
            <input asp-for="ReservationChambreHotel.NomClient" class="form-control" />
            <span asp-validation-for="ReservationChambreHotel.NomClient" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ReservationChambreHotel.TelephoneClient" class="control-label"></label>
            <input asp-for="ReservationChambreHotel.TelephoneClient" class="form-control" />
            <span asp-validation-for="ReservationChambreHotel.TelephoneClient" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ReservationChambreHotel.DateDebut" class="control-label"></label>
            <input asp-for="ReservationChambreHotel.DateDebut" class="form-control" type="date" />
            <span asp-validation-for="ReservationChambreHotel.DateDebut" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ReservationChambreHotel.DateFin" class="control-label"></label>
            <input asp-for="ReservationChambreHotel.DateFin" class="form-control" type="date" />
            <span asp-validation-for="ReservationChambreHotel.DateFin" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ReservationChambreHotel.ChambreId" class="control-label">Chambre</label>
            <select asp-for="ReservationChambreHotel.ChambreId" class="form-control">
                <option value="">-- Choisissez une chambre --</option>
                @foreach (var chambre in Model.ChambresHotel)
                {
                    <option value="@chambre.Id">@chambre.Id - @chambre.Description</option>
                }
            </select>
            <span asp-validation-for="ReservationChambreHotel.ChambreId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Enregistrer" class="btn btn-success w-100" />
        </div>
    </form>

    <div class="mt-3 text-center">
        <a asp-page="Index" class="btn btn-outline-secondary">Retourner à la liste des réservations de chambre</a>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
