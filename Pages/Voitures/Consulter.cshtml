@page
@model ProjetReservation.Pages.Voitures.ConsulterModel
@{
    ViewData["Title"] = "Consulter Voiture";
}

<h1 class="text-center my-4">Détails de la voiture</h1>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">Identifiant</dt>
            <dd class="col-sm-9">@Model.Voiture.Id</dd>

            <dt class="col-sm-3 fw-bold">Description</dt>
            <dd class="col-sm-9">@Model.Voiture.Description</dd>

            <dt class="col-sm-3 fw-bold">Prix Journalier</dt>
            <dd class="col-sm-9">@Model.Voiture.PrixJournalier.ToString("C")</dd>

            <dt class="col-sm-3 fw-bold">Marque</dt>
            <dd class="col-sm-9">@Model.Voiture.Marque</dd>

            <dt class="col-sm-3 fw-bold">Modèle</dt>
            <dd class="col-sm-9">@Model.Voiture.Modele</dd>

            <dt class="col-sm-3 fw-bold">Année de fabrication</dt>
            <dd class="col-sm-9">@Model.Voiture.AnneeDeFabrication</dd>

            <dt class="col-sm-3 fw-bold">Nombre de portes</dt>
            <dd class="col-sm-9">@Model.Voiture.NombreDePortes</dd>

            <dt class="col-sm-3 fw-bold">Nombre de places</dt>
            <dd class="col-sm-9">@Model.Voiture.NombreDePlaces</dd>
        </dl>
    </div>
</div>

<div class="d-flex justify-content-between">
    <a class="btn btn-secondary" asp-page="./Index">Retour à la liste</a>
    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Voiture.Id">Modifier la voiture</a>
</div>
